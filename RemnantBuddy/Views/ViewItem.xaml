<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:item="clr-namespace:RemnantBuddy.Models"
             x:Class="RemnantBuddy.Views.ViewItem"
             Title="ViewItem"
             x:DataType="item:BaseEquipment">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Edit" Clicked="Edit_Clicked" IconImageSource="{FontImage Glyph='+', Color=Black, Size=22}" />
    </ContentPage.ToolbarItems>
    <VerticalStackLayout Spacing="10" Margin="5">
        <Label x:Name="NameEditor"
                Text="{Binding Name}"
                HeightRequest="100" />
        <Label x:Name="DescriptionEditor"
                Text="{Binding Description}"
                HeightRequest="100" />
        <Label x:Name="LocationEditor"
                Text="{Binding Location}"
                HeightRequest="100" />
    </VerticalStackLayout>
</ContentPage>